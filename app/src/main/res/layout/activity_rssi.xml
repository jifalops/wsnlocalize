<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RssiActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <ScrollView
        android:background="#333"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/eventScrollView">
        <TextView
            android:id="@+id/eventLog"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="bottom"
            android:text="Events:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <ScrollView
        android:background="#333"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/deviceScrollView"
        tools:context=".RssiActivity">
        <TextView
            android:id="@+id/deviceLog"
            android:text="Devices:"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device ID"/>
            <EditText
                android:id="@+id/deviceId"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Distance (m)"/>
            <EditText
                android:id="@+id/distanceMeters"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="0.0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collect"/>
            <Switch
                android:id="@+id/collectSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/resultCount"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 results to send"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send" />
</LinearLayout>